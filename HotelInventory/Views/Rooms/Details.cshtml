@model HotelInventory.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Floor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Floor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomAmenities)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
            <tr>
                <th>Type</th>
                <th>Cost</th>
            </tr>
            @foreach(var item in Model.RoomAmenities)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amenity.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amenity.Cost)
                    </td>
                </tr>
            }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RoomID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
